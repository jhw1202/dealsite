@import url('<%= stylesheet_path('fonts.css') %>');

body {
  margin: 0;
  background-color: #e1e5e6;
}

.logo {
  font-family: 'lily_script_one';
  font-size: 1.5em;
  line-height: 45px;
  display: block;
  position: absolute;
  left: 50%;
  width: 230px;
  margin-left: -115px;
  text-decoration: none;
  color: #000;
}

#ajax-loader {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -26px;
  margin-top: -27px;
}

.product_image {
  width: 85%;
  margin: auto;
  text-align: center;
  background-color: #FFF;
}

.product_image img {
  margin-top: 10px;
}
.product_title {
  font-size: .75em;
}

.menu {
  float: right;
  line-height: 45px;
  margin-right: 20px;
}

.menu a {
  color: #000000;
  text-decoration: none;
  font-size: .95em;
  font-family: 'latoregular', sans-serif;
}

.search {
  border: 1px solid #000;
  float: left;
  margin: 8px 0 0 15px;
  padding: 0;
  height: 25px;
}

.search input {
  border: 0;
  border-right: 1px solid #000;
  background-color: #ecf0f1;
  float: left;
  width: 180px;
  height: 25px;
  margin: 0;
  margin-left: 5px;
  padding: 0;
  outline: none;
}

.search a {
  float: left;
  height: 25px;
  padding: 0 3px 0 3px;
}

.search img {
  margin-top: 3px;
  height: 19px;
  max-height: 80%;
}

.header {
  width: 100%;
  height: 45px;
  background-color: #ecf0f1;
}

.nav {
  background-color: #ecf0f1;
  border-top: 1px #bdc3c7 solid;
  height: 30px;
  width: 100%;
  margin-bottom: 0;
  box-shadow: 0px 5px 5px #888;
}

.nav a {
  margin-left: 8px;
  line-height: 30px;
  color: #000000;
  text-decoration: none;
  font-size: .7em;
  font-family: 'latoregular', sans-serif;
}

.item {
  width: 250px;
  padding: 5px;
  overflow: hidden;
  position: relative;
  margin: 15px;
  background-color: #FFF;
  border-radius: 10px;
  /*box-shadow: 0px 1px 3px #888;*/
}

.deals {
  height: 100%;
  width: 100%;
  margin: 10px auto;
  font-family: 'latoregular', sans-serif;

}

#dialog-form {
  background-color: white;
  border: 2px solid #000;
}


.ui-dialog .ui-state-error {
  padding: .3em;
}

.validateTips {
  border: 1px solid transparent;
  padding: 0.3em;
}

fieldset {
  padding:0;
  border:0;
  margin-top:25px;
}

label, input {
  display:block;
}

input.text {
  margin-bottom:12px;
  width:95%;
  padding: .4em;
}


.item .external_link {
  position: fixed;
  right:3px;
  bottom: 0;
  visibility: hidden;
}

.slider {
  display: none;
  z-index: -1;
  margin-top: 0;
  background-color: #FFF;
  border-bottom: solid 2px #bdc3c7;
}

.slider h3 {
  margin-top: 0;
}

.flash-container {
  z-index: 1;
  display: none;
  position: absolute;
  top: 50%;
  width: 400px;
  height: 60px;
  left: 50%;
  margin-left: -200px;
  margin-top: -30px;
  background-color: rgba(12,12,12,.8);
  text-align: center;
  border-radius: 5px;
}

.flash-message {
  width: 100%;
  height: 100%;
  line-height: 60px;
  color: #FFF;
  font-size: 1.25em;
  font-family: 'latoregular', sans-serif;
  display: inline-block;
}

#sign-out {
  display: none;
}


.sort {
    margin-right: 10px;
    display: inline-block;
    float: right;
}

