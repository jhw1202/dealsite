@import url('<%= stylesheet_path('fonts.css') %>'');

body {
  margin: 0;
  background-color: #F0F0F0;
}

.logo {
  font-family: 'lily_script_one';
  font-size: 1.5em;
  line-height: 45px;
  display: block;
  position: absolute;
  left: 50%;
  width: 230px;
  margin-left: -115px;
  text-decoration: none;
  color: #000;
}

#ajax-loader {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -26px;
  margin-top: -27px;
}

.product_image {
  width: 100%;
  text-align: center;
  background-color: #FFF;
}

.product_image img {
  margin-top: 10px;
}
.product_title {
  font-size: .75em;
}
.menu {
  float: right;
  line-height: 40px;
  margin-right: 20px;
}

.menu a {
  color: #000000;
  text-decoration: none;
  font-size: .75em;
}

#search {
  float: left;
  margin: 8px 0 0 8px;
  padding: 0px;
  width: 230px;
  height: 30px;
}

#search input {
  display: inline;
  padding-left: 5px;
  width: 180px;
  height: 20px;
  margin: 0;
  border: 1px solid #000;
}

#search a {

  margin: 0;
  padding: 0;
}

#search img {
  height: 12px;
}

.header {
  width: 100%;
  height: 45px;
  background-color: #ecf0f1;
}

.nav {
  background-color: #ecf0f1;
  border-top: 1px #bdc3c7 solid;
  height: 30px;
  width: 100%;
  margin-bottom: 10px;
}

.item {
  width: 250px;
  padding: 5px;
  overflow: hidden;
  position: relative;
  margin: 0 3px 5px 3px;
}

.deals {
  height: 100%;
  width: 85%;
  margin: 0 auto;
  font-family: 'latoregular', sans-serif;

}

#dialog-form {
  background-color: white;
  border: 2px solid #000;
}


.ui-dialog .ui-state-error {
  padding: .3em;
}

.validateTips {
  border: 1px solid transparent;
  padding: 0.3em;
}

fieldset {
  padding:0;
  border:0;
  margin-top:25px;
}

label, input {
  display:block;
}

input.text {
  margin-bottom:12px;
  width:95%;
  padding: .4em;
}
